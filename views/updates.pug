doctype html
html
  head
    title= pageTitle
    link(rel="stylesheet" href="/css/style.css")
    style.
      body {
        font-family: Inter;
        margin: 0;
        padding: 0;
        background-color:rgb(185, 212, 85);
        display: flex;
        justify-content: center;
        height: 100vh;
        align-items: center;
        width: 100%;
      }
      h1 {
        margin-top: 80px;
        text-align: center;
        color: rgb(32, 13, 100);
      }
      input {
        width: 100%;
      }
      
  body
  <div>
    h1 Update Beatles Form
    form(action="/update-cobj" method="POST")
      label(for="name") Name:
      input(type="text" name="name" required)
      br
      label(for="instrument") Instrument:
      input(type="text" name="instrument")
      br
      label(for="birth_year") Birth Year:
      input(type="text" name="birth_year")
      br
      button(type="submit") Submit
    br
    a(href="/") Return to the homepage
  </div>
