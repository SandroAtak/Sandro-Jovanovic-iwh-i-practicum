doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/style.css")
    title Beatles
    style.
      body {
        font-family: Inter;
        margin: 0;
        padding: 0;
        background-color:rgb(185, 212, 85);
        text-align: center;
      }
      h1 {
        margin-top: 80px;
        text-align: center;
        color: rgb(32, 13, 100);
      }
      table {
        background-color: rgb(109, 200, 228);
        margin: 25px auto;
        width: 50%;
      }
      th, td {
        text-align: right;
        padding: 20px;
        border: 1px solid #000;
      }
      th {
        background-color:rgb(226, 218, 218);
        font-weight: bold;
      }

  body
    h1 List of Beatles
    a(href="/update-cobj") Add to this table
    table
      thead
        tr
          th Name
          th Instrument
          th Year of Birth
      tbody
        each beatle in data
          tr
            td= beatle.properties.name
            td= beatle.properties.instrument
            td= beatle.properties.birth_year